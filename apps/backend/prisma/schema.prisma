generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Employee {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  role          String
  department    String
  status        String   @default("active") // active, inactive
  admissionDate DateTime
  phone         String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("employees")
}
